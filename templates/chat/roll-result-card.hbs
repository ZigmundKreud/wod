<div class="message-content">
    <div class="dice-roll">
        <div class="dice-result">
<!--            <div class="dice-formula">{{!roll.formula}}</div>-->
            <div class="dice-tooltip" style="display: block;">
                <section class="tooltip-part">
                    <div class="dice">
                        <header class="part-header flexrow">
                            <span class="part-formula">{{localize "WOD.ui.dicepool"}}</span>
                            <span class="part-total">{{pool}}</span>
                        </header>
                        <header class="part-header flexrow">
                            <span class="part-formula">{{localize "WOD.ui.difficulty"}}</span>
                            <span class="part-total">{{difficulty}}</span>
                        </header>
                        <header class="part-header flexrow">
                            <span class="part-formula">{{localize "WOD.ui.bonus"}}/{{localize "WOD.ui.malus"}}</span>
                            <span class="part-total">{{bonus}}</span>
                        </header>
                        <header class="part-header flexrow">
                            <span class="part-formula">{{localize "WOD.ui.successes"}}</span>
                            <span class="part-total">{{successes}}</span>
                        </header>
                        <header class="part-header flexrow">
                            <span class="part-formula">{{localize "WOD.ui.ones"}}</span>
                            <span class="part-total">{{ones}}</span>
                        </header>
                        <ol class="dice-rolls">
                            {{#each dices as |die id|}}
                                <li class="roll die d10 {{#if die.success}}success{{/if}} {{#if (equals die.result 1)}}min{{/if}}">{{die.result}}</li>
                            {{/each}}
                        </ol>
                    </div>
                </section>
            </div>
            <h4 class="dice-total">{{roll.total}} {{#if (isNegativeOrNull roll.total)}}{{localize "WOD.ui.success"}}{{else}}{{localize "WOD.ui.successes"}}{{/if}}</h4>
        </div>
    </div>
</div>