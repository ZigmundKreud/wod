<div class="flex-group-left">
    <div class="cell flexrow">
        <div class="field-label flex1">
            <label>{{localize "WOD.details.clan"}}</label>
        </div>
        <div class="field-value flex2">
            <select name="data.details.clan" data-type="String" style="width:100%">
                {{#select data.details.clan}}
                    <option value="">{{localize "WOD.None"}}</option>
                    <option value="assamite">{{localize "WOD.clan.assamite"}}</option>
