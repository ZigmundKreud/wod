<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
    <div class="wrap">
        {{> "systems/wod/templates/actor/parts/actor-toolbar.hbs"}}
        <div class="sheet-header flexrow">
            <div class="portrait flex1">
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
            </div>
            <div class="header-fields flex5">
                <div class="logo"></div>
                <div class="details flexrow">
                    {{> "systems/wod/templates/actor/parts/actor-details.hbs"}}
                </div>
                {{!-- Sheet Tab Navigation --}}
                <nav class="sheet-tabs tabs" data-group="primary">
                    <a class="item" data-tab="main">{{localize "WOD.ui.main"}}</a>
                    <a class="item" data-tab="combat">{{localize "WOD.ui.combat"}}</a>
                    <a class="item" data-tab="description">{{localize "WOD.ui.description"}}</a>
                    <a class="item" data-tab="traits">{{localize "WOD.ui.traits"}}</a>
                    <a class="item" data-tab="inventory">{{localize "WOD.ui.inventory"}}</a>
                </nav>
            </div>
        </div>
        {{!-- Sheet Body --}}
        <section class="sheet-body">
            {{!-- Main Tab --}}
            <div class="tab main" data-group="primary" data-tab="main">
                {{> "systems/wod/templates/actor/parts/actor-main.hbs"}}
            </div>
            {{!-- Combat Tab --}}
            <div class="tab items" data-group="primary" data-tab="combat">
                {{> "systems/wod/templates/actor/parts/actor-combat.hbs"}}
            </div>
            {{!-- Biography Tab --}}
            <div class="tab biography" data-group="primary" data-tab="description">
                {{editor content=data.biography target="data.biography" button=true owner=owner editable=editable}}
            </div>
            {{!-- Owned Items Tab --}}
            <div class="tab items" data-group="primary" data-tab="traits">
                {{> "systems/wod/templates/actor/parts/actor-traits.hbs"}}
            </div>
            {{!-- Owned Items Tab --}}
            <div class="tab items" data-group="primary" data-tab="inventory">
                {{> "systems/wod/templates/actor/parts/actor-inventory.hbs"}}
            </div>
        </section>
    </div>
</form>

